{
  "name": "telemetria-asb",
  "version": "1.0.1",
  "description": "Aplicación de telemetría con Electron.js",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [],
  "author": "SMR",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "@electron-forge/publisher-github": "^6.0.0"
  },
  "build": {
    "appId": "com.miempresa.telemetria",
    "productName": "Telemetria ASB",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    }
  },
  "publishers": [
    {
      "name": "@electron-forge/publisher-github",
      "config": {
        "repository": {
          "owner": "checoV26",
          "name": "api-telemetria"
        },
        "prerelease": false,
        "draft": true
      }
    }
  ],
  "dependencies": {
    "electron-updater": "^6.3.9"
  }
}